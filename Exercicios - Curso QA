    numeroDigitado  = Ler(“10”); 

    Enquanto (i<=100)
        numeroDigitado  = numeroDigitado  + 2; 
        Exibir: “O Total somado é: ”+ numeroDigitado  
    i++; 

    FIM Enquanto


